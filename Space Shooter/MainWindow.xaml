<Window x:Class="Space_Shooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Shooter"
        mc:Ignorable="d"
        Title="Space Shooter" Height="700" Width="500" ResizeMode="NoResize">
    <Canvas x:Name="myCanvas" Background="Black" Focusable="True" MouseLeftButtonDown="LeftButtonDown" MouseLeftButtonUp="LeftButtonUp" MouseMove="Canvas_MouseMove">
        <Label x:Name="Live" Background="Red" Height="20" Width="250" Canvas.Left="20" Canvas.Top="30"/>
        <Label x:Name="Mana" Background="Blue" Height="20" Width="250" Canvas.Left="20" Canvas.Top="60"/>
        <Ellipse x:Name="player" Tag="player" Fill="Blue" Height="60" Width="45" Canvas.Left="150" Canvas.Top="600"  />
        <Rectangle Tag="bullet"/>


    </Canvas>
    
    
</Window>
